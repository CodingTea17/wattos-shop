<%= render "layouts/errors", :object => @product %>

<div class="card card-body">
  <%= form_for @product do |f| %>
    <div class="form-group row">
      <%= f.label :name, :class => "col-1 col-form-label" %>
      <%= f.text_field :name, :class => "form-control col-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :cost, :class => "col-1 col-form-label" %>
      <%= f.text_field :cost, :class => "form-control col-2" %>
      <%= f.label :origin, :class => "col-1 col-form-label" %>
      <%= f.text_field :origin, :class => "form-control col-2" %>
    </div>
    <%= f.submit :class => "btn btn-success"%>
  <% end %>
</div>
