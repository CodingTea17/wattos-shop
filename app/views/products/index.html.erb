<div class="row justify-content-center">
  <div class="col-9">
    <h1 class="text-center">Current Inventory</h1>
    <p class="text-center"><%= link_to "Add a New Product", new_product_path(), :class => "btn btn-success" %></p>
    <div class="dropdown">
      Filter By:
      <button class="btn btn-primary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Model
      </button><br><br>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/products">All</a>
        <a class="dropdown-item" href="?planet=Coruscant">Coruscant</a>
        <a class="dropdown-item" href="?planet=Dagobah">Dagobah</a>
        <a class="dropdown-item" href="?planet=Tatooine">Tatooine</a>
        <a class="dropdown-item" href="?planet=Naboo">Naboo</a>
        <a class="dropdown-item" href="?planet=Hoth">Hoth</a>
        <a class="dropdown-item" href="?planet=Utapau">Utapau</a>
        <a class="dropdown-item" href="?planet=Endor">Endor</a>
        <a class="dropdown-item" href="?planet=Bespin">Bespin</a>
        <a class="dropdown-item" href="?planet=Kashyyyk">Kashyyyk</a>
      </div>
    </div>
    <div class="digg_pagination mb-2">
      <div class="row justify-content-center">
        <%= will_paginate @products %>
      </div>
    </div>
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr class="text-center">
        <th scope="col-3">Name</th>
        <th scope="col-3">Price (Credits)</th>
        <th scope="col-2">Avg. Rating</th>
        <th scope="col-2"></th>
        <th scope="col-2"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
          <tr class="text-center">
            <td class="col-4"><%= link_to product.name, product_path(product) %></td>
            <td class="col-3"><%= image_tag("credit.png") + product.cost %></td>
            <td class="col-2">4.7</td>
            <td class="col-1"><%= link_to "Edit", edit_product_path(product), :class => "btn btn-warning" %></td>
            <td class="col-2">
              <%= link_to "Destroy", product_path(product),
                                                    :class => "btn btn-danger ",
                                                    :data => {:confirm => "You sure?",
                                                    :method => "delete"} %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
