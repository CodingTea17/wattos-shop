<%= render('layouts/errors', :object => @review) %>

<div class="card card-body">
  <%= form_for [@product, @review] do |f| %>
    <div class="form-group row">
      <%= f.label :content, :class => "col-1 col-form-label" %>
      <%= f.text_area :content, :class => "form-control col-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :author, :class => "col-1 col-form-label" %>
      <%= f.text_field :author, :class => "form-control col-3" %>
      <%= f.label :rating, :class => "col-1 col-form-label" %>
      <%= f.select :rating, options_for_select([[5,'5'], [4,'4'], [3,'3'], [2,'2'], [1,'1']]), :class => "form-control col-1" %>
    </div>
    <p><%= f.submit :class => "btn btn-success" %></p>
  <% end %>
</div>
